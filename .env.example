# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@hostname:port/database

# OpenAI API (Required for AI features)
OPENAI_API_KEY=your_openai_api_key

# Google Drive API (Required for Google Drive integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Replit Auth (Required for authentication)
REPLIT_CLIENT_ID=your_replit_client_id
REPLIT_CLIENT_SECRET=your_replit_client_secret
REPLIT_ENCRYPTION_KEY=your_encryption_key

# Server Configuration
NODE_ENV=development  # Options: development, test, production
PORT=3000             # Default port for the server

# Additional Replit Variables (auto-provided when deployed to Replit)
# REPL_ID=auto_provided_by_replit
# REPLIT_DOMAINS=your-app.repl.co
# SESSION_SECRET=auto_provided_by_replit
# ISSUER_URL=https://replit.com/oidc